extends layout
block content
  h2 User Details
  h4 Username / Name
  | #{user.username} / #{user.name}
  h4 Email
  | #{user.email}
  h4 Tweets
  if user.tweets.length
    ol
      each tweet in user.tweets
        if tweet.originalTweet
          li #{user.name} retweeted "#{tweet.originalTweet.body}" #{tweet.body ? `with this quote "${tweet.body}"` : 'without quote'}
        else 
          li #{user.name} tweeted "#{tweet.body}"
  else
    p #{user.name} has no tweet yet❗
  h4 Home
  if user.home.length
    ol
      each tweet in user.home
        if tweet.originalTweet
          li "#{tweet.body ? tweet.body : 'WITHOUT QUOTE'}" from #{tweet.author.name} with this original tweet "#{tweet.originalTweet.body}"
        else 
          li "#{tweet.body}" from #{tweet.author.name}
  else
    p There is no tweet to show❗
  h4 Liked Tweets
  if user.likedTweets.length
    ol
      each tweet in user.likedTweets 
        li "#{tweet.body}" from #{tweet.author.name}.
  else
    p #{user.name} has no liked tweet yet❗
  h4 Followings
  if user.followings.length
    ol
      each person in user.followings
        li #{person.name}
  else
    p #{user.name} has no following yet❗
  h4 Followers
  if user.followers.length
    ol
      each person in user.followers 
        li #{person.name}
  else
    p #{user.name} has no follower yet❗