  h4 Followings
  if user.followings.length
    ol
      each person in user.followings
        li #{person.name}
  else
    p #{user.name} has no following yet!
  h4 Followers
  if user.followers.length
    ol
      each person in user.followers 
        li #{person.name}
  else
    p #{user.name} has no follower yet!